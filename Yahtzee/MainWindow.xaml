<Window x:Class="Yahtzee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yahtzee"
        mc:Ignorable="d"
        Title="Yahtzee Groep 5" WindowState="Maximized" >
    <Grid Background="Green">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Knoppen-->

        <!--Knoppen | Standaard knoppen-->
        <Button x:Name="spelregels"     Grid.Column="5" Grid.Row="0" Grid.RowSpan="2" Content="Spelregels"      VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="Spelregels_Click"/>
        <Button x:Name="rollen"         Grid.Column="3" Grid.Row="6" Grid.RowSpan="2" Content="Rol Dobbelsteen" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="Rollen_Click"/>
        <Button x:Name="opnieuw"        Grid.Column="6" Grid.Row="0" Grid.RowSpan="2" Content="Speel Opnieuw"   VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="NieuwSpel"/>
        
        <!--Teksten-->

        <!--Teksten | Standaard teksten-->
        <TextBlock x:Name="logo"             Text="Yahtyeet" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="50"/>
        <TextBlock x:Name="waarschuwingen"   Text="Veel Plezier" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="25"/>

        <!--Teksten | Score teksten-->
        <TextBlock x:Name="scorePlaceholder"      Text="Score :"        Grid.Column="0"                     Grid.Row="6" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" FontSize="25"/>
        <TextBlock x:Name="scoreTekst"            Text="0"              Grid.Column="1"                     Grid.Row="6" VerticalAlignment="Bottom" HorizontalAlignment="Right"   FontSize="25"/>

        <!--Teksten | Onderkant Yahtzee kaart | Placeholders-->
        <TextBlock x:Name="kansTekstPlaceholder"         Text="Kans: "           Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="4"  HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="30"/>
        <TextBlock x:Name="drieGelijkeTekstPlaceholder"  Text="Driegelijke: "    Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="5"  HorizontalAlignment="Left"  VerticalAlignment="Center" FontSize="30"/>
        <TextBlock x:Name="vierGelijkeTeksPlaceholdert"  Text="Viergelijke: "    Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="6"  HorizontalAlignment="Left"  VerticalAlignment="Center" FontSize="30"/>
        <TextBlock x:Name="fullHouseTekstPlaceholder"    Text="Full House: "     Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="7" HorizontalAlignment="Left"  VerticalAlignment="Center" FontSize="30" />
        <TextBlock x:Name="kleineStraatTekstPlaceholder" Text="Kleine Straat: "  Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="8" HorizontalAlignment="Left"  VerticalAlignment="Center" FontSize="30"/>
        <TextBlock x:Name="groteStraatTekstPlaceholder"  Text="Grote Straat: "   Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="9" HorizontalAlignment="Left"  VerticalAlignment="Center" FontSize="30"/>
        <TextBlock x:Name="yahtzeeTekstPlaceholder"      Text="Yahtzee: "        Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="10" HorizontalAlignment="Left"  VerticalAlignment="Center" FontSize="30"/>

        <!--Teksten | Onderkant Yahtzee kaart-->
        <TextBlock x:Name="kansTekst"         Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="4"  HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="30"/>
        <TextBlock x:Name="drieGelijkeTekst"  Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="5"  HorizontalAlignment="Right"  VerticalAlignment="Center" FontSize="30"/>
        <TextBlock x:Name="vierGelijkeTekst"  Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="6"  HorizontalAlignment="Right"  VerticalAlignment="Center" FontSize="30"/>
        <TextBlock x:Name="fullHouseTekst"    Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="7" HorizontalAlignment="Right"  VerticalAlignment="Center" FontSize="30" />
        <TextBlock x:Name="kleineStraatTekst" Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="8" HorizontalAlignment="Right"  VerticalAlignment="Center" FontSize="30"/>
        <TextBlock x:Name="groteStraatTekst"  Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="9" HorizontalAlignment="Right"  VerticalAlignment="Center" FontSize="30"/>
        <TextBlock x:Name="yahtzeeTekst"      Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="10" HorizontalAlignment="Right"  VerticalAlignment="Center" FontSize="30"/>


        <!--Foto's-->

        <!--Foto's | Dobbelstenen-->
        <Image x:Name="een"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="10" Grid.RowSpan="2" Grid.Column="0"/>
        <Image x:Name="twee" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="10" Grid.RowSpan="2" Grid.Column="1"/>
        <Image x:Name="drie" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="10" Grid.RowSpan="2" Grid.Column="2"/>
        <Image x:Name="vier" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="10" Grid.RowSpan="2" Grid.Column="3"/>
        <Image x:Name="vijf" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="10" Grid.RowSpan="2" Grid.Column="4"/>
        <Image x:Name="zes"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="10" Grid.RowSpan="2" Grid.Column="5"/>


    </Grid>
</Window>
